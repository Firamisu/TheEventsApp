@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container my-5 text-center">
      
        <div class="bg-light p-5 rounded">
            <h1 class="display-4">Welcome to The<span class="text-primary">Events</span>App</h1>
            <p class="lead">Create amazing events and let users join effortlessly.</p>
            <a href="/events" class="btn btn-primary btn-lg">Explore Events</a>
            <a href="/events/create" class="btn btn-outline-secondary btn-lg">Create an Event</a>
        </div>

        
        <div class="my-5">
            <h2>What Can You Do?</h2>
            <p>As an organizer, you can create events and manage attendees. As a user, browse events and join the ones you love!</p>
        </div>

       
        <div class="row g-4">
            <div class="col-md-4">
                <img src="images/vibrant-event-gathering.png" alt="A vibrant event setting with attendees" class="img-fluid rounded">
                <h5 class="mt-2">Explore Events</h5>
                <p>Discover events across various categories and interests.</p>
            </div>

            <div class="col-md-4">
                <img src="images/team-planning-session.png" alt="An organizer presenting an event" class="img-fluid rounded">
                <h5 class="mt-2">Create Your Event</h5>
                <p>Organize your events and attract participants seamlessly.</p>
            </div>

            <div class="col-md-4">
                <img src="images/elegant-social-gathering.png" alt="People networking and enjoying the event" class="img-fluid rounded">
                <h5 class="mt-2">Join and Enjoy</h5>
                <p>Register for events and connect with amazing people.</p>
            </div>
        </div>
    </div>


</body>
</html>
